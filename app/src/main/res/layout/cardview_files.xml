<?xml version="1.0" encoding="UTF-8"?>

<androidx.cardview.widget.CardView
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:paddingTop="7dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:elevation="100dp"
    app:cardBackgroundColor="#F4F2F2"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="2" android:orientation="vertical">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:weightSum="2" android:orientation="horizontal">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="25dp"
                android:src="@drawable/files_icon"/>

            <TextView android:layout_marginStart="5dp" android:layout_marginLeft="5dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/users" android:textIsSelectable="true" android:textColor="#42A5F3" android:textSize="20dp"/>


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <ImageButton
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_height="30dp"
                    android:layout_width="25dp"
                    android:src="@drawable/more_icon_ver"
                    android:id="@+id/more_icon_vertical"
                    android:background="#F4F2F2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#333131"
                android:text="@string/Time"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/Date"
                android:textIsSelectable="true"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/file_name"
            android:textIsSelectable="true"
            android:textColor="#000000"
            android:textSize="18dp"
            android:clickable="true"
            android:textColorLink="#4B98E4"
            android:linksClickable="true"/>

        <View
            android:layout_marginTop="4dp"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#D6D5D5"/>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <EditText
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/comments"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:background="@null"
                    android:inputType="text"
                    android:textColorHint="#A9AAAC"
                    android:hint="Add private comment."/>

                <ImageButton
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="30dp"
                    android:layout_width="25dp"
                    android:src="@drawable/send_icon"
                    android:id="@+id/send_icon"
                    android:background="#F4F2F2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>