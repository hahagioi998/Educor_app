<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assignment.Assignment_Submission.AssignmentGrade"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:id="@+id/student_name"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#1E1E1E"
            android:textSize="19dp"
            android:textAlignment="textStart"
            android:gravity="start" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="17dp"
            android:textAlignment="textStart"
            android:text="Title:"
            android:gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:id="@+id/title"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/white"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:gravity="start"/>
    </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:text=" 100 points"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/gray" />

        <View
            style="@style/Divider"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/attachments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="start"
            android:text=" Assignment Files :"
            android:textAlignment="textStart"
            android:textColor="#4E4E4E"
            android:textSize="16dp"
            android:textStyle="bold" />


        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listview"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scrollbars="none">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="-80dp"
        android:layout_alignParentBottom="true">


        <View
        style="@style/Divider"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />


        <EditText
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="150dp"
            android:hint="Add comments"
            android:textSize="15dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textStyle="normal"/>


        <EditText
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-145dp"
            android:hint="Grade Points"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="15dp"
            android:padding="5dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="15dp"
            android:layout_marginLeft="100dp"/></LinearLayout>


</RelativeLayout>
