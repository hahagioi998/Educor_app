<?xml version="1.0" encoding="UTF-8"?>

<androidx.cardview.widget.CardView
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:paddingTop="7dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:elevation="100dp"
    app:cardBackgroundColor="#F4F2F2"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/border_rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="2" android:orientation="vertical">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:weightSum="2" android:orientation="horizontal">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="25dp"
                android:src="@drawable/comment_icon"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/users"
                android:textIsSelectable="true"
                android:textColor="#42A5F3"
                android:textSize="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:weightSum="2" android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#333131"
                android:text="@string/Comment"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/Date"
                android:textIsSelectable="true"/>

        </LinearLayout>

        <TextView android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/comment"
            android:textIsSelectable="true"
            android:textColor="#000000"
            android:textSize="18dp"
            android:clickable="true"
            android:textColorLink="#4B98E4"
            android:linksClickable="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>